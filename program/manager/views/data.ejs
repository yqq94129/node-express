<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
		<link rel="stylesheet" href="/css/reset.css" />
		<link rel="stylesheet" href="/css/data.css" />
	</head>
	<body>
		<h2>
			ECSHOP管理中心-商品列表
			<span><a href="#"><img src="./images/jnsy.png"/></a></span>
			<a href="/add_goods"><input type="button" value="+ 添加新商品" class="good_list"></a>
		</h2>
		<form>
			<div class="list-div" id="list-div">
				<table cellpadding="3" cellspacing="1">
					<tbody>
						<tr>
							<th>
								<input type="checkbox">
								<a href="#">编号</a>
								<img src="../images/sort_desc.gif">
							</th>
							<th>
								<a href="#">商品名称</a>
							</th>
							<th>
								<a href="#">货号</a>
							</th>
							<th>
								<a href="#">价格</a>
							</th>
							<th>
								<a href="#">上架</a>
							</th>
							<th>
								<a href="#">精品</a>
							</th>
							<th>
								<a href="#">新品</a>
							</th>
							<th>
								<a href="#">热销</a>
							</th>
							<th>
								<a href="#">推荐排序</a>
							</th>
							<th>
								<a href="#">库存</a>
							</th>
							<th>
								<a href="#">虚拟销量</a>
							</th>
							<th>
								<a href="#">操作</a>
							</th>
						</tr>
						
						<% for(var i=0;i<docs.length;i++) {%>
						<tr>
							<td>
								<input type="checkbox">
								<%= docs[i].goods_num%>
							</td>
							<td class="spacial">
								<%= docs[i].name%>
								<span onclick="listTable.edit(this, 'edit_goods_name', 180)"></span>
							</td>
							<td><%= docs[i].huohao%></td>
							<td><%= docs[i].price%></td>
							<td><img src="../images/yes.gif"></td>
							<td><img src="../images/yes.gif"></td>
							<td><img src="../images/yes.gif"></td>
							<td><img src="../images/yes.gif"></td>
							<td><img src="../images/no.gif"></td>
							<td><img src="../images/yes.gif"></td>
							<td><img src="../images/no.gif"></td>
							<td>
								<a href="#">
									<img src="../images/icon_view.gif">
								</a>
								<a href="#">
									<img src="../images/icon_edit.gif">
								</a>
								<a href="#">
									<img src="../images/icon_copy.gif">
								</a>
								<a href="#">
									<img src="../images/icon_trash.gif">
								</a>
							</td>
						</tr>
					<% } %>
					</tbody>
				</table>
				<div class="pages">
					总计<span id="total"><%= total %></span>个
					记录分为<span id="recodes"><%=Math.ceil(total/evePage)%></span>页
					当前第<input type="text" name="" size="2" id="curPage" value="<%= recodes %>">页，
					每页<input type="text" name="" size="3" id="evePage" value="<%= evePage%>">
					<span>
						<a href="#" id="firstPage">第一页</a>
						<a href="#" id="prePage">>上一页</a>
						<a href="#" id="nextPage">>下一页</a>
						<a href="#" id="lastPage">>最末页</a>
						<select>
							<option>1</option>
							<option>2</option>
						</select>
					</span>
				</div>
			</div>
		</form>
	</body>
<script type="text/javascript" src="/js/jquery-1.11.3.js"></script>
<script type="text/javascript" src="/js/data.js"></script>
</html>
